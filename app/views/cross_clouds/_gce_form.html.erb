<div class="row cloud_signup_save">
	<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
		<h5>Sign In for google</h5>
		<!-- <a class="btn btn-default c_btn_gplus" href="/auth/google_oauth2" onClick='login();' id="loginText">Login with Google </a> -->
		<!-- <a class="btn btn-default c_btn_gplus" onClick='handleAuthClick();' id="loginText">Login with Google </a> -->
		<a class="btn btn-default c_btn_gplus" id="connect">Login with Google </a>
	</div>

	<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
		<h5>Save My Cloud As</h5>
		<div class="input-group margin-top-10" style="width:100%">
			<%= text_field_tag 'name', nil, placeholder: 'Enter a name to save', :required => true, :class =>"form-control" %>
			<span class="input-group-addon" style="width:35px" ></span>
		</div>
	</div>
</div>

<input type="hidden" name="google_client_id" value="<%= credentials['google_client_id'] %>">
<input type="hidden" name="google_secret_key" value="<%= credentials['google_secret_key'] %>">

<input type="hidden" name="provider" value="<%= selected_cloud %>">

