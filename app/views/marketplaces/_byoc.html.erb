			</div>
			<div class="col-sm-9 app_left_desc">
				<div class="row">
					<div class="col-sm-6 col-xs-6">
						<%= link_to settings_path, :class => "btn green col-md-12 col-xs-12" do %>Create<%end%>
					</div>
