			</div>
			<div class="col-xs-6">
				<div class="form-group">
					<%= text_field_tag 'domain', nil, placeholder: "megam.co", :class =>"form-control", :value => "megam.co", disabled: true %>
				    <%= hidden_field_tag 'domain', nil, placeholder: ".megam.co", :class =>"form-control", :value => "megam.co" %>
				</div>
			</div>
		</div>
		<div  class="col-xs-20">
		
		
