		<div class="row pad_tb25">
			<div class="col-sm-5">
				<div class="app_inner brad-3">
						
					<div class="col-sm-10 col-xs-10">
						<%= select_tag "byoc", options_for_select(@mkpname.map{ |c| [c] }, :selected=>@mkpname[0]), :class =>"form-control" %>	
